{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@assets":     [ "src/assets" ],     "@assets/*":     [ "src/assets/*" ],
      "@components": [ "src/components" ], "@components/*": [ "src/components/*" ],
      "@models":     [ "src/models" ],     "@models/*":     [ "src/models/*" ],
      "@screens":    [ "src/screens" ],    "@screens/*":    [ "src/screens/*" ],
