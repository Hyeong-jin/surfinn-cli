{
  "name": "react-typescript-boilerplate",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.6.0",
    "@emotion/styled": "^11.6.0",
    "@mui/icons-material": "^5.1.1",
    "@mui/material": "^5.1.1",
    "apisauce": "^2.1.2",
    "i18n-js": "^3.8.0",
    "mobx": "^6.3.7",
    "mobx-react-lite": "^3.2.2",
    "mobx-state-tree": "^5.0.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.0.2",
    "styled-components": "^5.3.3",
    "validate.js": "^0.13.1",
    "web-vitals": "^1.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/i18n-js": "^3.8.2",
    "@craco/craco": "^6.4.0",
    "craco-alias": "^3.0.1",
    "cross-env": "^7.0.3",
    "gluegun": "^4.7.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.2.1",
    "react-scripts": "4.0.3",
    "typescript": "^4.1.2"
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "format": "npm-run-all format:*",
    "format:js": "prettier --write \"src/**/*.js\"",
    "format:json": "prettier --write \"src/**/*.json\"",
    "format:md": "prettier --write \"**/*.md\"",
    "format:ts": "prettier --write \"src/**/*.ts{,x}\"",
    "test": "craco test",
    "eject": "react-scripts eject",
    "gen": "node ./bin/surfinn generate --compiled-build true"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
